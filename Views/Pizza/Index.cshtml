@model List<Pizza>

@if (Model.Count() == 0)
{
    <h2>Purtoppo non hai nessuna pizza disponibile!!!</h2>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Descrizione</th>
                <th scope="col">Immagine</th>
                <th scope="col">Prezzo</th>
                <th>Visualizzazione</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Pizza pizza in Model)
            {
                <tr>
                    <th scope="row">@pizza.Name</th>
                    <td>@pizza.Description</td>
                    <td><img alt="@pizza.Name" src="@pizza.Image" style="width:200px"></td>
                    <td>@pizza.Price</td>
                    <td><a href="@Url.Action("Detail",new {id = pizza.Id})"><button type="button" class="btn btn-warning">VISUALIZZA</button></a></td>
                </tr>
            }
        </tbody>
    </table>
}